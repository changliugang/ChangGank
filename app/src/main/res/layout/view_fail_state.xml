<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_prompt_error_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noinfoview_pic_no_network" />

        <TextView
            android:id="@+id/layout_prompt_error_tv_title"
            style="@style/text_fontsize2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/net_not_connect" />

        <TextView
            android:id="@+id/layout_prompt_error_tv"
            style="@style/text_fontsize4_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_net_error_reload" />

    </LinearLayout>

</RelativeLayout>
